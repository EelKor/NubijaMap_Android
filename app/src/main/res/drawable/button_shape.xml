<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <!-- 모서리 필렛 -->
        <corners
            android:radius="60dp"
            />
        <!-- 도형 내부 채우기 -->
        <solid
            android:color="@color/teal_200"
            />
        <!-- 여백 설정 -->
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <!-- 크기 설정 -->
        <size
            android:width="50dp"
            android:height="50dp"
            />
        <!-- 테두리 설정 -->
        <stroke
            android:width="0dp"
            android:color="@color/teal_200"
            />
    </shape>